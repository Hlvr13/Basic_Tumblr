<%= form_for([@post, @post.comments.build]) do |f| %>
    <p class="">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>

    <p class="">
        <%= f.label :body %><br>
        <%= f.text_area :body %>
    </p>

    <br>
    <p class="">
        <%= f.submit %>
    </p>
<% end %>